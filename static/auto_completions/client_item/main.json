{
    "format_version": "$general.format_version",
    "minecraft:item": {
        "description": {
            "identifier": "$general.file_identifier and $general.item_identifier",
            "category": "$general.item_category"
        },

        "components": {
            "minecraft:icon": {
                "texture": {
                    "@meta": {"is_value": true},
                    "@import.value": "$dynamic.rp.item_textures"
                },
                "frame_index": "$general.number"
            },
            "minecraft:use_animation": [ "bow", "eat", "drink", "crossbow", "camera" ],
            "minecraft:hover_text_color": "$general.minecraft_color",

            "minecraft:render_offsets": [ "apple", "tools", "miscellaneous" ],
            "minecraft:creative_category": {
                "parent": "$general.block_identifier and $general.item_identifier"
            },
            "minecraft:armor": {
                "texture_type": ["leather", "chain", "diamond", "iron", "gold"]
            }
        }
    }
}